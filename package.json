{
  "name": "instagram",
  "version": "0.0.1",
  "description": "Electron wrapper for instagram desktop",
  "main": "src/index.js",
  "license": "MIT",
  "author": "Mik <Mik1337@users.noreply.github.com>",
  "scripts": {
    "start": "electron src/",
    "pack": "electron-builder -r babel-register --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist:linux": "electron-builder --linux -p always",
    "dist:mac": "electron-builder --x64 --mac -p always",
    "dist:win": "electron-builder --win -p always"
  },
  "repository": "https://github.com/Mik1337/instagram.git",
  "keywords": [
    "Electron",
    "Instagram",
    "social",
    "media",
    "desktop"
  ],
  "devDependencies": {
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2"
  },
  "build": {
    "appId": "com.mik.instagram",
    "productName": "instagram",
    "files": [
      "./build/**/*",
      "./src/index.js"
    ],
    "linux": {
      "synopsis": "Instagram Desktop App",
      "target": [
        "AppImage"
      ],
      "category": "Application"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mik",
        "repo": "https://github.com/Mik1337/instagram.git"
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "publish": [
        "github"
      ]
    }
  }
}
